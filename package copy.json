{
    "name": "x3b-marketplace",
    "private": true,
    "workspaces": [
        "src/client",
        "src/server"
    ],
    "scripts": {
        "heroku-postbuild": "cd src/server && npm install && npm run prisma:generate",
        "css": "cd src/client && npm run css",
        "dev": "cd src/client && npm run dev",
        "release": "cd src/client && npm run release",
        "start": "cd src/server && node index.js",
        "prisma:migrate-deploy": "cd src/server && npx prisma migrate deploy",
        "prisma:seed": "cd src/server && node prisma/seed.js"
    },
    "engines": {
        "node": "20.x",
        "npm": "10.x"
    }
}
